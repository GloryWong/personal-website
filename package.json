{
  "name": "personal-website",
  "type": "module",
  "version": "2.2.2",
  "private": true,
  "description": "Glory Wong personal website",
  "author": {
    "name": "Glory Wong",
    "email": "glorywong1001@gmail.com",
    "url": "https://glorywong.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GloryWong/personal-website.git"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "astro dev",
    "dev:network": "astro dev --host",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "preview:network": "astro preview --host",
    "prepare": "pnpm synctypes && pnpm simple-git-hooks",
    "synctypes": "astro sync",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^3.1.9",
    "@astrojs/rss": "^4.0.10",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^5.1.3",
    "@fontsource/inter": "^5.1.0",
    "@fontsource/lora": "^5.1.0",
    "@playform/compress": "^0.1.6",
    "@tailwindcss/typography": "^0.5.15",
    "astro": "^4.16.17",
    "clsx": "^2.1.1",
    "rehype-external-links": "^3.0.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.3.0",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.16.0",
    "eslint-plugin-astro": "^1.3.1",
    "happy-dom": "^15.11.7",
    "lint-staged": "^15.2.11",
    "simple-git-hooks": "^2.11.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm commitlint --edit ${1}",
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm lint:fix && pnpm astro check"
  }
}
