{
  "name": "personal-website",
  "type": "module",
  "version": "2.3.1",
  "private": true,
  "description": "Glory Wong personal website",
  "author": {
    "name": "Glory Wong",
    "email": "glorywong1001@gmail.com",
    "url": "https://glorywong.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GloryWong/personal-website.git"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "astro dev",
    "dev:network": "astro dev --host",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "preview:network": "astro preview --host",
    "prepare": "pnpm synctypes && pnpm simple-git-hooks",
    "synctypes": "astro sync",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.1",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@fontsource/inter": "^5.2.6",
    "@fontsource/lora": "^5.2.6",
    "@playform/compress": "^0.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "astro": "^5.12.0",
    "clsx": "^2.1.1",
    "rehype-external-links": "^3.0.0",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.17.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-plugin-astro": "^1.3.1",
    "happy-dom": "^17.6.3",
    "lint-staged": "^15.5.2",
    "simple-git-hooks": "^2.13.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm commitlint --edit ${1}",
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "pnpm lint:fix",
      "pnpm astro check"
    ]
  }
}
